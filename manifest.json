{
  "manifest_version": 3,
  "name": "In-Browser Timer",
  "version": "1.1",
  "description": "Overlay a simple countdown timer on any page to stay focused.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["timer.js"],
      "css": ["timer.css"],
      "run_at": "document_idle"
    }
  ]
}
